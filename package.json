  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/sersoft-gmbh/running-release-tags-action/issues"
  },
  "homepage": "https://github.com/sersoft-gmbh/running-release-tags-action#readme",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.1",
    "@actions/io": "^2.0.0"
  },
  "devDependencies": {
    "@tsconfig/node24": "^24.0.1",
    "@types/node": "^24.10.1",
    "@vercel/ncc": "^0.38.4",
    "typescript": "^5.9.3"
