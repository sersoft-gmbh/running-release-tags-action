{
  "name": "running-release-tags-action",
  "version": "4.0.0",
  "description": "A GitHub action that automatically updates \"running release\" major and major.minor tags.",
  "engines": {
    "node": ">=24"
  },
  "exports": {
    ".": "./dist/index.js"
  },
